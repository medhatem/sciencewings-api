{
    "extends": "../tsconfig",
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "../../dist/server",
        "paths": {
            "aws-sdk": ["node_modules/aws-sdk"], // needed for mapping of aws-sdk imports 
            "aws-sdk/*": ["node_modules/aws-sdk/*" ] // needed for mapping of aws-sdk imports  
        },
        "declaration": true,
        "removeComments": false
    },
    "include": ["./**/*.ts", "../typings.d.ts"]
}
