{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "../",
        "target": "esnext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "pretty": true
    },
    "exclude": [
        "node_modules"
    ],
    "plugins": [
        {
            "name": "typescript-styled-plugin"
        }
    ]
}
